<h1 align="center">Listing all recipes</h1>
<% @recipes.each do |recipe| %>
<div class="row">
  <div class="col-md-2 mx-auto mt-2">
    <section class="center">
      <%= gravatar_for(recipe.chef, size: 120) %>
    </section>
  </div>
  <div class="col-md card mb-2 bg-light">
    <div class="card-body">
      <h4 class="card-title"><%= link_to  recipe.name, recipe_path(recipe) %></h4>
      <p><%= truncate(recipe.description, length: 150) %></p>
      <p>
        <span class="quiet"><small>Created
            <%= time_ago_in_words(recipe.created_at) %> ago</small></span>
      </p>
    </div>
  </div>
</div>
<% end %>